package flash.media {


/**
 * The SoundCodec class is an enumeration of constant values used in setting the <code>codec</code> property of the <code>Microphone</code> class.
 */
public final class SoundCodec {
  /**
   * Specifies that the Nellymoser codec be used for compressing audio. This constant is the default value of the <code>Microphone.codec</code> property.
   */
  public static const NELLYMOSER:String = "NellyMoser";
  /**
   * Specifies that the Speex codec be used for compressing audio.
   */
  public static const SPEEX:String = "Speex";
}
}
