<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>net.jangaroo</groupId>
    <artifactId>jangaroo-libs-parent</artifactId>
    <version>0.9.8-SNAPSHOT</version>
    <relativePath>../jangaroo-libs-parent/pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>net.jangaroo</groupId>
  <artifactId>joounit</artifactId>
  <packaging>jangaroo</packaging>
  <version>0.9.8-SNAPSHOT</version>
  
  <name>joounit</name>
  <description>JooUnit - Jangaroo FlexUnit 3</description>
  
  <url>TODO</url>

  <developers>

    <developer>
      <id>fwienber</id>
      <name>Frank Wienberg</name>
      <email>frank@jangaroo.net</email>
      <timezone>+1</timezone>
    </developer>

  </developers>

  <profiles>
    <profile>
      <id>integrationtest</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
    </profile>
  </profiles>

  <build>
    <resources>
      <resource>
        <directory>src/main/joo-js</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>net.jangaroo</groupId>
        <artifactId>jangaroo-maven-plugin</artifactId>
        <configuration>
          <jooUnitTestExecutionTimeout>120000</jooUnitTestExecutionTimeout>
          <testsHtml>selenium-tests.html</testsHtml>
        </configuration>
        <executions>
          <execution>
            <id>test-phantom-bare</id>
            <configuration>
              <jooUnitTestExecutionTimeout>120000</jooUnitTestExecutionTimeout>
              <phantomTestSuite>net.jangaroo.phantomjs.AllTests</phantomTestSuite>
              <phantomTestRunner>joo/phantomjs-joo-runner.js</phantomTestRunner>
              <phantomArgs>
                {
                testSuiteName:'flexunit.framework.AllFrameworkTests',
                jooMainClass:'net.jangaroo.joounit.runner.PhantomJsRunner',
                loglevel:'info',
                onTimeout:function(){console.error('tests timed out');phantom.exit(1)},
                writeResult:function(a,b){joo._writeTestResult(a.replace('.xml','-plain.xml'),b);phantom.exit(0)}
                }
              </phantomArgs>
            </configuration>
            <goals>
              <goal>test</goal>
            </goals>
          </execution>
          <execution>
            <id>test-phantom-plain</id>
            <configuration>
              <jooUnitTestExecutionTimeout>120000</jooUnitTestExecutionTimeout>
              <phantomTestSuite>flexunit.framework.AllFrameworkTests</phantomTestSuite>
              <!--<phantomTestSuite>net.jangaroo.phantomjs.SimpleTestSuite</phantomTestSuite>-->
              <phantomTestRunner>joo/phantomjs-joounit-runner.js</phantomTestRunner>
              <phantomArgs>
                (function(){
                console.info('running tests without test.html'); return {}})()
              </phantomArgs>
            </configuration>
            <goals>
              <goal>test</goal>
            </goals>
          </execution>
          <execution>
            <id>test-phantom-page</id>
            <configuration>
              <jooUnitTestExecutionTimeout>120000</jooUnitTestExecutionTimeout>
              <phantomTestSuite>net.jangaroo.phantomjs.AllTests</phantomTestSuite>
              <phantomTestRunner>joo/phantomjs-joounit-page-runner.js</phantomTestRunner>
              <phantomArgs>
                {freq:(function(){console.info('running tests in test.html'); return 300})()}
              </phantomArgs>
            </configuration>
            <goals>
              <goal>test</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <dependencies>

    <dependency>
      <groupId>net.jangaroo</groupId>
      <artifactId>jooflash</artifactId>
      <version>0.9.8-SNAPSHOT</version>
      <type>jangaroo</type>
    </dependency>

    <dependency>
      <groupId>net.jangaroo</groupId>
      <artifactId>jooflexframework</artifactId>
      <version>0.9.8-SNAPSHOT</version>
      <type>jangaroo</type>
    </dependency>

  </dependencies>
</project>
